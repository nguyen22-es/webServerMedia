@model UI.Models.MembershipViewModels.MediaViewModel

@{
    ViewData["Title"] = "Video";
}

<div class="row small-bottom-margin">
    <div class="col-sm-12">
        <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Topic" asp-route-id="@Model.topicDTO.TopicId">
            <i class="material-icons vertical-align no-left-margin">keyboard_arrow_left</i><span class="vertical-align">Back to @Model.topicDTO.TopicTitle</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-9">
        @*Place the video player here*@
        @if (Model != null && Model.mediaDTO != null && Model.LessonInfo != null && Model.topicDTO != null)
        {
            if (Model.mediaDTO.titleModul == "ảnh")
            {
                <partial name="_ImagePartial" model="@Model" />
            }
            else
            {
                <partial name="_MediaPlayerPartial" model="@Model" />
            }

    
        }
    </div>

    <div class="col-sm-3">
        @*Place the Coming Up and Instructor Bio sections here*@
        @if (Model != null && Model.LessonInfo != null)
        {
            <partial name="_MediaComingUpPartial" model="@Model.LessonInfo" />
        }

        @if (Model != null && Model.TopicTypeDTO != null)
        {
            <partial name="_TopicTypeBioPartial" model="@Model.TopicTypeDTO" />
        }
    </div>
</div>

