@model IEnumerable<Common.DTOModels.UI.MediaDTO>

@foreach (var Media in Model)
{
    <div class="card-body module-video">
        <a href="~/Membership/Video/@Media.Id" class="no-text-decoration">
            <div class="media">
                <div class="media-left hidden-xs overflow-hidden">
                    <img src="@Media.Thumbnail" width="100">
                </div>
                <div class="media-body">
                    <h5 class="no-margin">@Media.Title</h5>
                    <p class="text-muted no-margin">
                        <i class="material-icons vertical-align text-small">alarm</i>
                        <span class="vertical-align text-small">
                            @Media.Duration minutes
                        </span>
                    </p>
                    <p class="no-margin">@Media.Description</p>
                </div>
            </div>
        </a>

    </div>
}
